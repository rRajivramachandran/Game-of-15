<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
   android:background="@drawable/game"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fina"

    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:id="@+id/icontime"
                android:src="@mipmap/time_icon"
                android:text="ccccdffrrr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="You have:294 s"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/icontime"
                android:id="@+id/timeremain"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:layout_marginTop="300dp"
                 android:id="@+id/begin"
                 android:onClick="letit"
                 android:text="START"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/begin"
                android:textSize="35dp"
                android:textColor="#000000"
                android:id="@+id/ins"
                android:text="TAP DONT SWIPE"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="90dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="1"

                    android:id="@+id/c00"
                    android:clickable="true"
                    android:onClick="c00"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="2"
                    android:id="@+id/c01"
                    android:onClick="c01"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:onClick="c02"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="3"
                    android:id="@+id/c02"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:onClick="c03"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="4"
                    android:id="@+id/c03"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:onClick="c10"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="5"
                    android:id="@+id/c10"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:onClick="c11"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="6"
                    android:id="@+id/c11"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:onClick="c12"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="7"
                    android:id="@+id/c12"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:onClick="c13"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="8"
                    android:id="@+id/c13"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:onClick="c20"
                    android:padding="10dp"
                    android:clickable="true"
                    tools:text="9"
                    android:id="@+id/c20"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:onClick="c21"
                    style="@style/blocks"
                    android:padding="10dp"
                    android:clickable="true"
                    tools:text="10"
                    android:id="@+id/c21"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:onClick="c22"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="11"
                    android:id="@+id/c22"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:onClick="c23"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="12"
                    android:id="@+id/c23"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    android:onClick="c30"
                    tools:text="13"
                    android:id="@+id/c30"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="14"
                    android:id="@+id/c31"
                    android:onClick="c31"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text="15"
                    android:id="@+id/c32"
                    android:onClick="c32"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    style="@style/blocks"
                    android:padding="10dp"
                    tools:text=" "
                    android:id="@+id/c33"
                    android:onClick="c33"
                    />
            </LinearLayout>

            <Button
                android:layout_marginTop="30dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"

                android:layout_width="137dp"
                android:layout_height="43dp"
                android:background="@drawable/homegame"
                android:shadowColor="#144AA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Home page"
                android:id="@+id/homeid"
                android:onClick="homeclick"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relax"
                android:textSize="20dp"
                android:text="RELAX!!!!"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/best"
                android:textSize="20dp"
                android:text="Your best:"/>

        </LinearLayout>








    </LinearLayout>









